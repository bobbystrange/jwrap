{
  "analysis": {
    "analyzer": {
      "ngram_analyzer": {
        "tokenizer": "ngram_tokenizer"
      }
    },
    "tokenizer": {
      "ngram_tokenizer": {
        "type": "ngram",
        "min_gram": 1,
        "max_gram": 1,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    }
  },
  "persistent": {
    "action.auto_create_index": "false"
  }
}
